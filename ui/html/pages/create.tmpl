{{define "title"}}Create a New Snippet{{end}}

{{define "main"}}
<form action="/snippet/create" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required maxlength="100" />
    </div>
    <div>
        <label for="content">Content:</label>
        <textarea type="text" id="content" name="content" required></textarea>
    </div>
    <fieldset>
        <legend>Deleted in:</legend>
        <input type="radio" id="expires-year" name="expires" value="365" />
        <label for="expires-year">One Year</label>
        <input type="radio" id="expires-week" name="expires" value="7" />
        <label for="expires-week">One Week</label>
        <input type="radio" id="expires-day" name="expires" value="1" />
        <label for="expires-day">One Day</label>
    </fieldset>
    <div>
        <input type="submit" value="Create Snippet" />
    </div>
</form>
{{end}}
